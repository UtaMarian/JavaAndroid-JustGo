<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyTicketActivity"
    android:background="@color/app_background"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/app_buttons">
        <ImageView android:layout_height="40dp"
            android:layout_width="40dp"
            android:contentDescription="@string/backarrow"
            android:src="@drawable/baseline_arrow_back_24"
            android:id="@+id/backArrowBuyTicket"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cumpara biletul"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:padding="5dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plecare din:"
                android:textColor="@color/white"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/departureCity"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginLeft="50dp"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sosire la:"
                android:textColor="@color/white"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/arrivalCity"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginLeft="50dp"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pret:"
                android:textColor="@color/white"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/priceRoute"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginLeft="50dp"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/app_buttons"
            android:id="@+id/buyBtn"
            android:text="@string/cumpara"
            android:textSize="20sp"/>
        <GridView
            android:id="@+id/seatGridList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="6dp"
            android:numColumns="4"
            android:verticalSpacing="6dp" />


    </LinearLayout>
</RelativeLayout>